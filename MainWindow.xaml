<Window x:Class="Alfreelina_P2_AP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alfreelina_P2_AP1"
        mc:Ignorable="d"
        Title="Menu Principal" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <Menu Height = "20" VerticalAlignment="Top">
        
                <MenuItem Header= "Registros" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Top">
                   <MenuItem x:Name="Registrar" Header="Registrar " Click= "Registrar_Click"/>
                    
                    </MenuItem>

                <MenuItem Header= "Consultas" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Top">
                  <MenuItem x:Name="Consultar" Header="Consultar " Click="Consultar_Click"/>
                  
                </MenuItem>
            </Menu>
        </StackPanel>    
    </Grid>
</Window>
